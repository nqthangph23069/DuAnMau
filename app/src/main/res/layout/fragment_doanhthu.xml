<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="ngay bat dau: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edtStart"
        android:hint="chon ngay bat dau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="ngay ket thuc: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edtEnd"
        android:hint="chon ngay ket thuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnThongKe"
        android:text="Thong ke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="1000 VND"
        android:id="@+id/txtKq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>